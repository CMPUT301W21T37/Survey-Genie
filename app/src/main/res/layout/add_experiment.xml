<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_experiment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/experiment_description"
        android:ems="10"
        android:hint="@string/experiment_description"
        android:inputType="text"
        android:maxLength="40" />

    <EditText
        android:id="@+id/add_experiment_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/experiment_region"
        android:autofillHints="@string/experiment_region"
        android:inputType="text"
        android:maxLength="10" />

    <EditText
        android:id="@+id/add_experiment_trial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/experiment_trial"
        android:autofillHints="@string/experiment_trial"
        android:inputType="number" />

</LinearLayout>