<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--We are using this image
        view to display our QR code-->
    <ImageView
        android:id="@+id/IVQrcode"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/qr_code" />

    <!--Button for creating a QR code-->
    <Button
        android:id="@+id/BtnPrintQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IVQrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Save QR Code"
        app:backgroundTint="#03A9F4"/>

    <Button
        android:id="@+id/BtnRegisterBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnPrintQR"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Register Bar Code"
        app:backgroundTint="#03A9F4"/>

</RelativeLayout>